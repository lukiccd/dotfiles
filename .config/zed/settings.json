{
  "bottom_dock_layout": "contained",
  "tabs": {
    "file_icons": false,
    "git_status": false
  },
  "title_bar": {
    "show_menus": false,
    "show_branch_icon": true
  },
  "buffer_line_height": "comfortable",
  "show_wrap_guides": true,
  "disable_ai": true,
  "project_panel": {
    "hide_gitignore": false,
    "entry_spacing": "comfortable",
    "dock": "left"
  },
  "icon_theme": {
    "mode": "system",
    "light": "Catppuccin Macchiato",
    "dark": "Zed (Default)"
  },
  "redact_private_values": false,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "base_keymap": "VSCode",
  "minimap": {
    "thumb": "always"
  },
  "cursor_blink": true,
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "buffer_font_family": "Fira Code",
  "auto_indent_on_paste": true,
  "ensure_final_newline_on_save": true,
  "ui_font_size": 16,
  "buffer_font_size": 17.0,
  "theme": {
    "mode": "system",
    "light": "Gruvbox Dark Hard",
    "dark": "One Dark"
  },
  "languages": {
    "MDX": {
      "language_servers": ["mdx-analyzer", "vale", "harper-ls"]
    }
  },
  "file_types": {
    "Markdown": ["md", "mdx"]
  },
  "auto_install_extensions": {
    "git-firefly": true,
    "catppuccin": true,
    "catppuccin-icons": true,
    "ini": true,
    "harper": true,
    "vale": true,
    "mdx": true
  },
  "terminal": {
    "working_directory": "current_project_directory",
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default"
      }
    }
  }
}
